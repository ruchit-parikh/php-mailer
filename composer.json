{
    "name": "ruchitparikh/mailer",
    "description": "A simple crud api using core php",
    "require": {
        "php": ">=8.0.0",
        "ext-pdo": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "phpunit/phpunit": "^9.6"
    },
    "autoload":	{
        "psr-4": {
            "Mailer\\": "src/",
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "@php vendor/bin/php-cs-fixer fix -v --dry-run",
        "fix": "@php vendor/bin/php-cs-fixer fix"
    }
}
